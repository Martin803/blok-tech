# Power by FlashSoft

PROJECT="node-server"

all:install

debug:;@echo "\033[1mDebuging ${PROJECT}\033[22m";

test:;@echo "\033[1mTesting ${PROJECT}\033[22m";

server:;@echo "\033[1mStarting ${PROJECT}\033[22m";

install:;@echo "\033[1mInstalling ${PROJECT}\033[22m";\
    npm install;\

update:;@echo "\033[1mUpdating ${PROJECT}\033[22m";

clean:;rm -rf node_modules;

.PHONY:test server install clean update